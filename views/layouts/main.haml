!!! 5
%html{:lang => 'en'}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width", :"initial-scale" => 1, :"shrink-to-fit" => 'no'}

    %title
      Recipe Collector
      = @page_title

    <!-- Bootstrap Latest compiled and minified CSS -->
    %link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :integrity => "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", :crossorigin => "anonymous"}
    <!-- Font Awesome -->
    %link{:rel => "stylesheet", :href => "https://use.fontawesome.com/releases/v5.1.0/css/all.css", :integrity => "sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt", :crossorigin => "anonymous"}


    <!- Custom CSS -->
    %link{:rel => "stylesheet", :href => "/stylesheets/application.css"}

  %body

    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %button{:type => "button", :class => "navbar-toggle collapsed", :"data-toggle" => "collapse", :"data-target" => "navbar-collapse-1", :"aria-expanded" => "false"}
            %span{:class => "sr-only"}Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"}Brand

        %div.collapse.navbar-collapse#navbar-collapse-1
          %ul.nav.navbar-nav.navbar-right
            - if current_user && current_user.admin?
              %li
                %a{:href => "/users"}Users
            - if current_user
              %li
                %a{:href => "/users/#{current_user.id}/recipes"}Recipes
              %li.dropdown{:role => "dropdown"}
                %a.dropdown-toggle{:"data-toggle" => "dropdown", :href => "#", :role => "button", :"aria-hidden" => true, :"aria-expanded" => false}
                  = current_user.username
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/users/#{current_user.id}"}
                      %i.fa.fa-user-circle
                      My Profile
                  %li
                    %a{:href => "/logout"}
                      %i.fa.fa-sign-out-alt
                      Logout
            - else
              %li
                %a{:href => "/login"}Login

    .container
      #flash_messages
        - flash.keys.each do |type|
          %div{:class => "alert alert-#{type}", :role => "alert"}
            %button{:type => "button", :class => "close", "data-dismiss" => "alert", "aria-label" => "Close"}
              %span{"aria-hidden" => true} &times;
            = flash[type]


      = yield

    %footer.footer
      .container
        %p.text-muted#copyright
          Copyright Â©
          = Time.now.year
          Meeks Tech, LLC

    %script{:src => "https://code.jquery.com/jquery-3.3.1.slim.min.js", :integrity => "sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", :crossorigin => "anonymous"}
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", :integrity => "sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", :crossorigin => "anonymous"}
    %script{:src => "/javascripts/application.js", :type => "text/javascript"}
