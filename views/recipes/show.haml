#recipe
  %h2.page-header
    = @recipe.title

  %p.text-muted 
    Written By:
    = @recipe.author
  %p.text-muted
    Created:
    = @recipe.created_at.strftime('%e-%b-%Y')
  
  .row
    - if @recipe.image.present?
      .col-sm-12
        #recipe_image
          %img{:src => "#{@recipe.image}", :alt => "#{@recipe.title}", :class => "img-responsive"}
  .row
    .col-sm-6.col-sm-offset-3
      %p.badge.category= @recipe.category
  .row
    .col-sm-6
      #ingredient-listing
        %h3 Ingredients
        -# %table.table-condensed
        -#   %th Ingredient
        -#   %th Quantity
        -#   %th Measurement
        -#   - @ingredients.each do |ing|
        -#     %tr
        -#       %td= ing.name
        -#       %td= ing.quantity
        -#       %td= ing.qty_type
        %ul#ingredient_list
          - @ingredients.each do |ing|
            %li
              = ing.name
              = ing.quantity
              = ing.qty_type
    .col-sm-6
      %h3 Procedure:         
      #procedure
        %p= text_format(@recipe.procedure)
.buttons
  %a{:href => "#{@recipe.id}/edit", :class => "btn btn-primary"} Edit Recipe
  %a{:href => "/users/#{@recipe.user_id}/recipes", :class => "btn btn-default"} Back to Recipes